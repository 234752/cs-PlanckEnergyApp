@model List<PlanckEnergyMVC.Models.RowItem1Model>

@{
    ViewData["Title"] = "Dashboard";
}

<style>

    li:nth-child(even) {
        background: #ccc;
    }

    table, th, td {
        border: 1px solid;
    }

    th {
        padding: 10px;
        color: white;
        background-color: blue;
    }

</style>

<div class="container text-center">

    <div class="row m-auto">

        <div class="col-sm-3">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">No. of projects so far</h5>
                    <h5 style="color: lightblue">Placeholder</h5>
                </div>
            </div>
        </div>

        <div class="col-sm-3">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">MW systems designed</h5>
                    <h5 style="color: lightblue">Placeholder</h5>
                </div>
            </div>
        </div>

        <div class="col-sm-3">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Standardized materials</h5>
                    <h5 style="color: lightblue">Placeholder</h5>
                </div>
            </div>
        </div>

        <div class="col-sm-3">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Distributed today</h5>
                    <h5 style="color: lightblue">Placeholder</h5>
                </div>
            </div>
        </div>

    </div>

    <div style="border: 1px solid #000; height: 150px; width: 40%; margin-top:5%">

        <ul style="list-style:none; height:150px; max-height:150px; margin:0; overflow:auto; padding:0;">
            @foreach (var item in Model)
            {
                <li style="text-align:left">
                    @item.Description;
                </li>
            }
        </ul>

    </div>

    <div style="border: 1px solid #000; height: 150px; width: 40%; margin-top:5%; overflow:auto">
        <table style="height:150px;">
            <thead>

                <tr>

                    <th>Material name</th>
                    <th>Total volume</th>
                    <th>Readiness level</th>
                    <th>Fit for UseCase</th>

                </tr>

            </thead>

            <tbody style="height: 120px">

                @foreach (var item in Model)
                {
                    <tr>

                        <td>@item.Description</td>
                        <td>@item.Description1</td>
                        <td>@item.Description2</td>
                        <td>@item.Description3</td>

                    </tr>
                }

            </tbody>

        </table>

    </div>

</div>


